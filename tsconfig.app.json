{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["./src/types/global.d.ts"],
		"jsx": "preserve",
		"jsxImportSource": "vue"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
